{
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.defaultFormatter": "denoland.vscode-deno",
  "typescript.preferences.quoteStyle": "single",
  "deno.lint": true,
  "deno.enable": true,
  "deno.config": "./deno.json",
  "search.exclude": {
    "**/deno.lock": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[json]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[markdown]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "cSpell.allowCompoundWords": true,
  "cSpell.words": [
    "deno",
    "denoland",
    "lcov",
    "RWES",
    "tano"
  ]
}