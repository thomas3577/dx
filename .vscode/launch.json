{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test {file}",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--allow-run",
        "-RWESN",
        "--inspect-brk",
        "${file}"
      ],
      "cwd": "${workspaceFolder}",
      "outputCapture": "std",
      "attachSimplePort": 9229
    },
    {
      "name": "Test all",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--allow-run",
        "-RWESN",
        "--inspect-brk"
      ],
      "cwd": "${workspaceFolder}",
      "outputCapture": "std",
      "attachSimplePort": 9229
    },
  ]
}