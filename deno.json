{
  "name": "@dx/dx",
  "version": "1.1.17",
  "exports": "./mod.ts",
  "tasks": {
    "lock": "deno cache --lock=deno.lock ./*.ts",
    "test": "deno test --allow-read --allow-run --allow-sys --allow-env --coverage=./coverage",
    "test:cov": "deno coverage coverage --lcov ./coverage > ./coverage/lcov.info",
    "test:html": "deno coverage coverage --html",
    "test:all": "deno task test && deno task test:cov && deno task test:html"
  },
  "compilerOptions": {
    "strict": true
  },
  "imports": {
    "@std/path": "jsr:@std/path@1.0.1",
    "@std/fs": "jsr:@std/fs@0.229.3",
    "@std/cli": "jsr:@std/cli@1.0.0",
    "@std/assert": "jsr:@std/assert@1.0.0",
    "@std/testing": "jsr:@std/testing@0.225.3",
    "@dx/tano": "jsr:@dx/tano@0.4.31"
  },
  "publish": {
    "exclude": [
      ".github",
      ".gitignore",
      ".editorconfig",
      "cspell.json",
      "deno.lock",
      "*.code-workspace",
      "**/*.test.ts"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 360,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      ".vscode/**",
      "coverage",
      "cspell.json"
    ]
  }
}
