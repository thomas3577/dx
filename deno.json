{
  "name": "@dx/dx",
  "version": "1.1.7",
  "exports": "./mod.ts",
  "tasks": {
    "lock": "deno cache --lock=deno.lock --lock-write ./mod.ts",
    "test": "deno test --allow-read --allow-run --allow-sys --allow-env --coverage=./coverage",
    "test:cov": "deno coverage coverage --lcov ./coverage > ./coverage/lcov.info",
    "test:html": "genhtml -o ./coverage/html ./coverage/lcov.info",
    "test:all": "deno task test && deno task test:cov && deno task test:html"
  },
  "compilerOptions": {
    "strict": true
  },
  "imports": {
    "@std/path": "jsr:@std/path@0.221",
    "@std/fs": "jsr:@std/fs@0.221",
    "@std/cli": "jsr:@std/cli@0.221",
    "@std/assert": "jsr:@std/assert@0.221",
    "@std/testing": "jsr:@std/testing@0.221",
    "@dx/tano": "jsr:@dx/tano@0.3.18"
  },
  "publish": {
    "exclude": [
      ".github",
      ".gitignore",
      ".editorconfig",
      "cspell.json",
      "*.code-workspace",
      "**/*.test.ts"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo",
        "no-deprecated-deno-api"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 360,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      ".vscode/**",
      "coverage",
      "cspell.json"
    ]
  }
}
