{
  "tasks": {
    "install": "deno install -A -f -n dx --config ./deno.json ./mod.ts",
    "cache": "deno cache --lock=deno.lock --lock-write ./mod.ts"
  },
  "compilerOptions": {
    "strict": true
  },
  "imports": {
    "std/": "https://deno.land/std@0.204.0/"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-explicit-any",
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 360,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      ".vscode/**",
      "cspell.json"
    ]
  }
}
