{
  "name": "@dx/dx",
  "version": "1.0.18",
  "exports": {
    ".": "./mod.ts",
    "./dx": "./dx.ts"
  },
  "tasks": {
    "install": "deno install --allow-read --allow-run -f -n dx -c ./deno.json ./mod.ts",
    "cache": "deno cache --lock=deno.lock --lock-write ./mod.ts",
    "test": "deno test --coverage=./coverage",
    "test:cov": "deno coverage coverage --lcov ./coverage > ./coverage/lcov.info",
    "test:html": "genhtml -o ./coverage/html ./coverage/lcov.info",
    "test:all": "deno task test && deno task test:cov && deno task test:html"
  },
  "compilerOptions": {
    "strict": true
  },
  "imports": {
    "@std/path": "jsr:@std/path@0.217.0",
    "@std/fs": "jsr:@std/fs@0.217.0",
    "@std/cli": "jsr:@std/cli@0.217.0",
    "@std/assert": "jsr:@std/assert@0.217.0"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo",
        "no-deprecated-deno-api"
      ],
      "exclude": [
        "no-explicit-any",
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 360,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      ".vscode/**",
      "cspell.json"
    ]
  }
}
