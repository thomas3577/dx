{
  "name": "@dx/dx",
  "version": "2.0.1",
  "license": "MIT",
  "exports": "./mod.ts",
  "tasks": {
    "lock": "deno cache ./*.ts",
    "test": "deno test --allow-run -RSE --coverage=./coverage",
    "test:cov": "deno coverage coverage --lcov ./coverage > ./coverage/lcov.info",
    "test:html": "deno coverage coverage --html",
    "test:all": "deno task test && deno task test:cov && deno task test:html"
  },
  "imports": {
    "@std/path": "jsr:@std/path@1.0.6",
    "@std/fs": "jsr:@std/fs@1.0.4",
    "@std/cli": "jsr:@std/cli@1.0.6",
    "@std/assert": "jsr:@std/assert@1.0.6",
    "@std/testing": "jsr:@std/testing@1.0.3",
    "@dx/tano": "jsr:@dx/tano@0.5.1"
  },
  "publish": {
    "exclude": [
      ".github",
      ".vscode",
      ".gitignore",
      ".editorconfig",
      "deno.lock",
      "**/*.test.ts"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 360,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      ".vscode/**",
      "coverage"
    ]
  }
}
