{
  "name": "@dx/dx",
  "version": "2.2.1",
  "license": "MIT",
  "exports": "./mod.ts",
  "tasks": {
    "lock": "deno cache ./*.ts",
    "test": "deno test --allow-run -RSE --coverage=./coverage",
    "test:cov": "deno coverage coverage --lcov ./coverage > ./coverage/lcov.info",
    "test:html": "deno coverage coverage --html",
    "test:all": "deno task test && deno task test:cov && deno task test:html",
    "update": "deno outdated --update --latest"
  },
  "imports": {
    "@dx/tano": "jsr:@dx/tano@^0.5.11",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@std/cli": "jsr:@std/cli@^1.0.13",
    "@std/fs": "jsr:@std/fs@^1.0.13",
    "@std/path": "jsr:@std/path@1.0.8",
    "@std/semver": "jsr:@std/semver@^1.0.4",
    "@std/testing": "jsr:@std/testing@^1.0.9"
  },
  "publish": {
    "exclude": [
      ".github",
      ".vscode",
      ".gitignore",
      ".editorconfig",
      "deno.lock",
      "**/*.test.ts"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 360,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      ".vscode/**",
      "coverage"
    ]
  }
}
